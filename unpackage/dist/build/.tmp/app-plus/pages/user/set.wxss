page {
  background: #f8f8f8;
}
.user-section {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  height: 180rpx;
  padding-left: 30rpx;
  position: relative;
}
.user-section .portrait-box {
    width: 120rpx;
    height: 120rpx;
    border: 6rpx solid #fff;
    border-radius: 50%;
    position: relative;
    z-index: 2;
}
.user-section .portrait {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.user-section .username {
    font-size: 40rpx;
    margin-left: 20rpx;
    color: #e4e7ed;
    text-shadow: 1px 0px 1px rgba(0, 0, 0, 0.3);
}
.first {
  background-color: #449ded;
}
.confirm-btn {
  width: 210rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 20px;
  margin-top: 0rpx;
  background-color: lightslategray;
  color: #fff;
  font-size: 32rpx;
}
.confirm-btn:after {
    border-radius: 20px;
}
.list-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
  padding: 20rpx 30rpx;
  line-height: 60rpx;
  position: relative;
  background: #fff;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.list-cell.log-out-btn {
    margin-top: 40rpx;
}
.list-cell.log-out-btn .cell-tit {
      color: #fa436a;
      text-align: center;
      margin-right: 0;
}
.list-cell.cell-hover {
    background: #fafafa;
}
.list-cell.b-b:after {
    left: 30rpx;
}
.list-cell.m-t {
    margin-top: 16rpx;
}
.list-cell .cell-more {
    -webkit-align-self: baseline;
            align-self: baseline;
    font-size: 36rpx;
    color: #909399;
    margin-left: 10rpx;
}
.list-cell .cell-tit {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 34rpx;
    color: #303133;
    margin-right: 10rpx;
}
.list-cell .cell-tip {
    font-size: 32rpx;
    color: #909399;
}
.list-cell switch {
    -webkit-transform: translateX(16rpx) scale(0.84);
            transform: translateX(16rpx) scale(0.84);
}

