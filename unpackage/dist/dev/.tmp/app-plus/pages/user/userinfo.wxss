  background-color: white;
}
canvas {
  background-color: white;
  width: calc((100vh - 70rpx) / 2.5);
  margin: 25rpx;
  height: calc(100vh - 110rpx);
}
.sign {
  width: 150px;
  height: 50px;
}
.box {
