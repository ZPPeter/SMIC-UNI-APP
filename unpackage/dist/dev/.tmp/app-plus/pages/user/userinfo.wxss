.test {
  border: 16rpx solid #fff;
  border-radius: 5%;
  background-color: dodgerblue;
  width: 74.66667vw;
  height: 85.33333vw;
}
.content {
  width: 74.66667vw;
  font-size: 32rpx;
  color: #303133;
  margin-left: 0rpx;
}
.content .info {
    font-size: 32rpx;
    color: #8f8f94;
    padding-left: 8rpx;
}
.userinfo {
  font-size: 34rpx;
  color: #303133;
  font-weight: bold;
}
.caozuo {
  width: calc(100vh - 140rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  bottom: calc((100vh - 140rpx) / 2);
  left: -30rpx;
  -webkit-transform: rotate(270deg);
          transform: rotate(270deg);
  background-color: red;
}
.caozuo .button {
    width: 210rpx;
    height: 96rpx;
    line-height: 96rpx;
    border-radius: 20px;
    font-size: 32rpx;
}
.caozuo .button:after {
      border-radius: 10px;
}
.caozuo .over {
    position: absolute;
    right: -20px;
    background-color: #0599d7;
}
.caozuo .chongqian {
    position: absolute;
    right: 120px;
    background-color: #ff8f58;
}
.caozuo .cancel {
    position: absolute;
    left: 30px;
    background-color: #d5d5d5;
}
.signcanvas {
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  border-radius: 10px;
  background-color: #eeeeee;
}
.signcanvas .info {
    white-space: nowrap;
    font-size: 156rpx;
    color: #eeeeee;
    position: absolute;
    top: 0;
    left: -90rpx;
    -webkit-transform: rotate(270deg) translate(-50%, -50%);
            transform: rotate(270deg) translate(-50%, -50%);
    color: transparent;
    -webkit-text-stroke: 2px #dfdfdf;
}

